<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"タイトル" %>

  <label for="book_opinion">Opinion</label>
  <%= f.text_area :opinion, autofocus: true, id:"book_opinion", placeholder:"内容" %>

  <%= f.submit 'Update Book' %>
<% end %>