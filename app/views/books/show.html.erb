<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <% image_tag @book.get_image %>
      <td>
        <%= image_tag 'no_image.jpg' %><br>
        <%= @book.user.name %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.Opinion %></td>
      <td>edit</td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>