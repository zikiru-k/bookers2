<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <%= image_tag book.get_image %>
        <td><%= image_tag 'no_image.jpg' %></td>
        <td><%= book.title %></td>
        <td><%= book.Opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>