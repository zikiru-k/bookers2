<%= render '/books/userinfo', user: @user, book: @book_new %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td>
          <%= link_to user_path(@user) do %>
            <%= image_tag book.user.get_profile_image(100, 100) %>
          <% end %>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      <% end %>
    </tr>
  </tbody>
</table>