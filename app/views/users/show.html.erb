<h1>User info</h1>
<table>
  <tbody>
    <tr>
      <td><%= image_tag @user.get_profile_image(100, 100) %></td>
      <td><%= @user.name %></td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>


<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <% image_tag book.get_image %>
        <td><%= image_tag @user.get_profile_image(100, 100) %></td>
        <td><%= book.title %></td>
        <td><%= book.Opinion %></td>
      <% end %>
    </tr>
  </tbody>
</table>