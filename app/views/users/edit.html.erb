<h1>User info</h1>

<% if @user.errors.any? %>
  <div>
    <p>1 error prohibited this obj from being saved:</p>
  </div>
  <% @user.errors.full_messages %>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>

  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>

  <%= f.submit 'Update Book' %>
<% end %>